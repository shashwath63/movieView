<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".HomePage">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/jss_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JSS ACADEMY OF TECHNICAL EDUCATION, BANGALORE"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_marginBottom="60dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEPARTMENT OF COMPUTER SCIENCE AND ENGINEERING"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Mini Project On:"
        android:textSize="16sp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movies Review App"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Under the Guidance Of :"
        android:textSize="16sp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mrs. Namitha S J"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By:"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shashwath BN (1JS20CS148)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sharath Kumar HV (1JS20CS147)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/startProjectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@color/material_dynamic_tertiary0"
            android:text="Start"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>


